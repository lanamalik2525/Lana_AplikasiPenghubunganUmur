    private void btnHitungActionPerformed(java.awt.event.ActionEvent evt) {
        try {
            int tahunLahir = Integer.parseInt(txtTahunLahir.getText());
            int tahunSekarang = LocalDate.now().getYear();
            int umur = tahunSekarang - tahunLahir;
            if (umur < 0) {
                JOptionPane.showMessageDialog(this, "Tahun lahir tidak valid!", "Error", JOptionPane.ERROR_MESSAGE);
            } else {
                txtUmur.setText(umur + " tahun");
            }
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Masukkan angka tahun lahir yang benar!", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {
        txtTahunLahir.setText("");
        txtUmur.setText("");
    }

    private void btnKeluarActionPerformed(java.awt.event.ActionEvent evt) {
        System.exit(0);
    }

    public static void main(String args[]) {
        java.awt.EventQueue.invokeLater(() -> {
            new HitungUmur().setVisible(true);
        });
    }

    private javax.swing.JButton btnHitung;
    private javax.swing.JButton btnReset;
    private javax.swing.JButton btnKeluar;
    private javax.swing.JLabel jLabel1;
    private javax.swing.JLabel jLabel2;
    private javax.swing.JTextField txtTahunLahir;
    private javax.swing.JTextField txtUmur;
}
